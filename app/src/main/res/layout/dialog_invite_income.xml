<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_FFFFFF"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/dialog_iv_close"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:src="@drawable/ic_close" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/select_call_user"
        android:textColor="@color/color_262626"
        android:textSize="18sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/dialog_rv_msg"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/dialog_iv_close"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/dialog_btn_select_all"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_below="@id/dialog_rv_msg"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:src="@drawable/online_item_ck_normal_shape" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_below="@id/dialog_rv_msg"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/dialog_btn_select_all"
        android:gravity="center_vertical"
        android:text="@string/select_all"
        android:textColor="@color/color_a6000000"
        android:textSize="14sp" />

    <Button
        android:id="@+id/dialog_btn_call"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_below="@id/dialog_rv_msg"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/login_btn_unlogin_shape"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/call"
        android:textColor="@color/color_FFFFFF"
        android:textSize="16sp" />

</RelativeLayout>